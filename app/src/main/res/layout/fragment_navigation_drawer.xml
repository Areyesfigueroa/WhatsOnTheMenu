<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.afigueroacogswell.whatsonthemenu.NavigationDrawerFragment">

    <!--Fragment Background-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorFragmentLayoutBackground" />


    <ListView
        android:id="@android:id/list"
        style="@style/MyCustomToolBarTheme"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/navigation_menu_text"
        android:background="@color/colorPrimaryDark"
        android:drawSelectorOnTop="false"></ListView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:id="@android:id/empty"/>

    <!--Fragment Content-->
    <TextView
        android:id="@+id/navigation_menu_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/navigation_menu"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:layout_marginLeft="35dp"/>

</RelativeLayout>
